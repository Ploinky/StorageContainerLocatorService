<!DOCTYPE html>
<html>
  <head>
    <title>SCLS</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="header">
      <h1>Storage Container Locator Service</h1>
      <nav class="navigation">
        <%= render "components/link", {to: locations_path} do %>
          Locations
        <% end %>
        <%= render "components/link", {to: containers_path} do %>
          Containers
        <% end %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
